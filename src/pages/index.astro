---
import BaseHead from '../components/BaseHead.astro';
// import Header from '../components/Header.astro';
import Header from '../components/Header.tsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import taxdata from '../data/taxdata.json';
import SliderChartWrapper from '../components/SliderChartWrapper.tsx';

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);

--- 

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body >
		<!-- <Header /> -->
		<main>
			<section class="introdcution">
				<Header client:load pathname={pathname} subpath={subpath} />
			</section>
            <section>
                <SliderChartWrapper client:load/>
            </section>
		</main>
	</body>
</html>

<style> 
	section {
        padding: 1rem;
	}
</style> 
