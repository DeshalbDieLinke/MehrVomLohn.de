---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.tsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import SliderChartWrapper from '../components/SliderChartWrapper.tsx';
import Introdcution from '../components/Introduction.tsx';
import Footer from '../components/Footer.tsx';
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
  } from "../components/ui/card.tsx";

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);

--- 

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body >
		<!-- <Header /> -->
		<main>
			<section class="introdcution">
				<Header client:load pathname={pathname} subpath={subpath} />
                <Introdcution />
            </section>
            <section id="MAIN">
                <SliderChartWrapper client:load/>
            </section>
            <section>
                <div style="margin-top: 50px;">
                    <Footer />
                </div>
            </section>
		</main>
	</body>
</html>

