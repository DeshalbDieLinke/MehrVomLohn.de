---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.tsx";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SliderChartWrapper from "../components/SliderChartWrapper.tsx";
import Introdcution from "../components/Introduction.tsx";
import Footer from "../components/Footer.tsx";

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const subpath = pathname.match(/[^\/]+/g);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <meta property="og:image" content="/og-image.png" />
        <meta property="og:image:width" content="2210" />
        <meta property="og:image:height" content="1430" />
        <meta property="twitter:image" content="/og-image.png" />
        <meta property="twitter:card" content="summary_large_image" />
    </head>
    <body>
        <!-- <Header /> -->
        <main>
            <Header client:load pathname={pathname} subpath={subpath} />
            <section class="introdcution">
                <Introdcution />
            </section>
            <section id="MAIN" class="px-0 md:px-10 py-2 md:py-4 lg:py-8 max-w-screen-2xl mx-auto">
                <SliderChartWrapper client:load />
            </section>
            <Footer />
        </main>
    </body>
</html>
